@inject IJSRuntime JSRuntime

<Blazorise.FieldLabel>URL</Blazorise.FieldLabel>
<input class="form-control" readonly type="text" value="@TextToCopy" />
<Blazorise.Button Color="Blazorise.Color.Primary" Clicked="@CopyTextToClipboard">Copy</Blazorise.Button>


@code {
    [Parameter]
    public string? TextToCopy { get; set; }

    private async Task CopyTextToClipboard()
    {
        await JSRuntime.InvokeVoidAsync("clipboardCopy.copyText", TextToCopy);
    }
}
